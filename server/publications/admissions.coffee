_admission_fields =
	fields:
		c: 1
		i: 1
		u: 1
		r: 1

###############################################################################
Meteor.publish "my_admissions", () ->
	user_id = this.userId

	crs = get_my_admissions IGNORE, IGNORE, IGNORE, _admission_fields
	log_publication crs, user_id, "my_admissions"

	return crs


