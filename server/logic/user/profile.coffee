@gen_profile = (user) ->
	if not occupation
		occupation = "learner"

	profile = Profiles.findOne {user_id: user._id}

	if profile
		return profile._id

	services =  user.services
	if services
		linkedin = services["linkedin"]

	profile =
		mail_notifications: "yes"
		notification_cycle: "day"
		last_notification: new Date()
		user_id: user._id

	if linkedin
		profile.avatar = linkedin.pictureUrl
		profile.given_name = linkedin.firstName
		profile.family_name = linkedin.lastName
		profile.location = linkedin.location

	else
		avatar: "data:image/png;base64,"

	if user.profile
		profile.given_name = user.profile.given_name | "unknown"
		profile.family_name = user.profile.family_name | "unknown"

	mail = get_user_mail user
	profile.name = "Profile for " + mail

	msg = "User profile created: " + mail + " (" + user._id + ")"
	log_event msg, event_db, event_imp

	return store_document_unprotected Profiles, profile, user, true


